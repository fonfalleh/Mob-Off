<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.npfom.odin.MainActivity"
    android:background="#5502aed3">

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Report"
        android:id="@+id/reportButton"
        android:background="#e4d4cd00"
        android:clickable="true"
        android:longClickable="false"
        android:textColor="#ff000000"
        android:textSize="36dp"
        android:typeface="normal"
        android:layout_below="@+id/starBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/starBar"
        android:rating="0"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_below="@+id/ratingTitle"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:id="@+id/editComplaint"
        android:background="#ffffffff"
        android:maxHeight="60dp"
        android:maxLines="2"
        android:shadowColor="#ffb4b4b4"
        android:layout_below="@+id/complaintTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="What is your complaint?"
        android:id="@+id/complaintTitle"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="66dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:text="Your Name"
        android:ems="10"
        android:id="@+id/editName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="How would you rate your experience?"
        android:id="@+id/ratingTitle"
        android:textSize="15dp"
        android:layout_below="@+id/editComplaint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/responseText"
        android:layout_below="@+id/reportButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elegantTextHeight="true"
        android:textSize="15dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignRight="@+id/starBar"
        android:layout_alignEnd="@+id/starBar"
        android:layout_below="@+id/starBar"
        android:layout_alignLeft="@+id/starBar"
        android:layout_alignStart="@+id/starBar"
        android:focusable="false"
        android:background="#ff2028be" />
</RelativeLayout>
