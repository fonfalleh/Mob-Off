<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.npfom.odin.MainActivity"
    android:background="#5502aed3">

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Rapportera"
        android:id="@+id/reportbutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:enabled="true"
        android:textColor="#ff9969ff"
        android:background="#fff1ff0e" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_above="@+id/reportbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:calendarViewShown="false"
        android:clickable="true"
        android:background="#ffff0001"
        android:visibility="visible" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:clickable="true"
        android:numStars="7"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:rating="3.5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignLeft="@+id/datePicker"
        android:layout_alignStart="@+id/datePicker"
        android:layout_alignRight="@+id/datePicker"
        android:layout_alignEnd="@+id/datePicker"
        android:layout_below="@+id/reportbutton"
        android:background="#ffffffff"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
